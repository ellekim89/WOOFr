<div class="container">


<div id="tinderslide">
    <ul>
         <% @pets.each do |dog| %>
        <li class="pane1"><div class="img">
          <%= image_tag dog.photos[0].large if dog.photos[0]%>
        </div><div><%= dog.name %>,
        <%= city = dog.city
        city.map(&:inspect).join(', ').chomp %>
        </div><div class="like"></div><div class="dislike"></div></li>
         <% end %>
    </ul>
</div>
</div>

<script type="text/javascript">

  $("#tinderslide").jTinder({
    onDislike: function (item) {
        alert('Dislike image ' + (item.index()+1));
    },
    onLike: function (item) {
        alert('Like image ' + (item.index()+1));
    },
    animationRevertSpeed: 200,
    animationSpeed: 400,
    threshold: 1,
    likeSelector: '.like',
    dislikeSelector: '.dislike'
});

</script>
